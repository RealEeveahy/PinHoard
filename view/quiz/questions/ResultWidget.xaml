<UserControl x:Class="PinHoard.view.quiz.questions.ResultWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinHoard.view.quiz.questions"
             mc:Ignorable="d">
    <Grid Height="Auto" Width="500" HorizontalAlignment="Stretch" Background="#EEEEEE" Margin="0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Question}" FontSize="16" TextWrapping="Wrap" Margin="5"/>

        <Border Grid.Row="1" Background="{Binding ResultColour}" Opacity="0.5" Margin="20,10">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="{Binding Indicator}" Margin="0,0,20,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding UserAnswer}" TextWrapping="Wrap"/>
            </WrapPanel>
        </Border>
        <TextBlock Grid.Row="2" Text="{Binding CorrectAnswer}" TextWrapping="Wrap" Margin="20,5"/>
    </Grid>
</UserControl>
