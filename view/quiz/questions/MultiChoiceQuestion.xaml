<UserControl x:Class="PinHoard.view.quiz.questions.MultiChoiceQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinHoard.view.quiz.questions"
             mc:Ignorable="d" 
             MinHeight="500" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding QuestionText}" Foreground="Blue" FontSize="36" 
                        TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top"
                   Margin="10,40,10,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1">
            <Label Content="{Binding PromptText}" FontSize="36" HorizontalAlignment="Center" Margin="10"/>
            <StackPanel x:Name="Buttons" Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Button Width="250" Height="100" Margin="10" Background="#FFDDDDDD" Click="SwitchSelectedAnswer">
                    <TextBlock Text="{Binding MC_1}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Width="250" Height="100" Margin="10" Background="#FFDDDDDD" Click="SwitchSelectedAnswer">
                    <TextBlock Text="{Binding MC_2}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Width="250" Height="100" Margin="10" Background="#FFDDDDDD" Click="SwitchSelectedAnswer">
                    <TextBlock Text="{Binding MC_3}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
