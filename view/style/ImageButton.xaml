<UserControl x:Class="PinHoard.view.style.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinHoard.view.style"
             mc:Ignorable="d">
    <Button x:Name="InnerButton"
        Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Tag="{Binding TagValue, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Background="#FFFCF8F3"
            BorderBrush="#FF707070"
            Width="60" Height="60" Margin="10">
        <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
               Stretch="Fill"/>
    </Button>
</UserControl>
