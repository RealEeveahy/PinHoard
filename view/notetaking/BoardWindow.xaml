<Window x:Class="PinHoard.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinHoard"
        xmlns:c="clr-namespace:PinHoard.view.style"
        xmlns:vm="clr-namespace:PinHoard.viewmodel"
        xmlns:u="clr-namespace:PinHoard.view.notetaking"
        mc:Ignorable="d"
        Title="BoardWindow" Height="700" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="FileDropdown" Header="_File">
                <MenuItem Header="New Board"/>
                <MenuItem Header="Open Board"/>
                <Separator/>
                <MenuItem Header="Save Board" Click="SaveBoard"/>
            </MenuItem>
            <MenuItem x:Name="EditDropdown" Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
            </MenuItem>
            <MenuItem x:Name="DebugTool" Header="Debug" Click="ToggleDebug"/>
        </Menu>
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel x:Name="LeftPanel" Grid.Column="0" Background="#FFF69176">
                <StackPanel DockPanel.Dock="Top">
                    <DockPanel>
                        <c:ImageButton x:Name="NewEmptyButton" 
                                       DockPanel.Dock="Top"
                                       Click="NewPinClicked"
                                       TagValue="empty" 
                                       ImageSource="/images/newEmptyGraphic.png"
                                       MouseEnterCommand="{Binding PopoutToolbar, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </DockPanel>

                    <DockPanel>
                        <c:ImageButton x:Name="NewContentButton" 
                                       DockPanel.Dock="Top"
                                       Click="NewComponentClicked"
                                       TagValue="content" 
                                       ImageSource="/images/newContentGraphic.png"
                                       MouseEnterCommand="{Binding PopoutToolbar, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </DockPanel>

                    <c:ImageButton x:Name="MovePinButton" ImageSource="/images/moveGraphic.png"/>
                    <c:ImageButton x:Name="DeletePinButton" ImageSource="/images/deletePinGraphic.png"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                    <c:ImageButton DockPanel.Dock="Top"
                                       Click="ToggleDebug"
                                       ImageSource="/images/debugGraphic.png"/>
                    <c:ImageButton DockPanel.Dock="Top"
                                       Click="SaveBoard"
                                       ImageSource="/images/saveGraphic.png"/>
                </StackPanel>
            </DockPanel>
            <Grid x:Name="RightPanel" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="PinScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">

                </ScrollViewer>
                <DockPanel x:Name="ReadabiltyGrid" Grid.Row="0" Background="#FFEFEFEF">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" >
                        <StackPanel x:Name="ColourSubContainer" Orientation="Horizontal">
                            <Label Content="Colour:" Height="30" Margin="10" FontSize="10"/>
                            <Button x:Name="ColourPickButton" Width="120" Height="20" Background="{Binding FocusedColour}" BorderBrush="#FF707070" Click="ColourPickToggle"/>
                        </StackPanel>
                        <StackPanel x:Name="FilterContainer" Orientation="Horizontal">
                            <Label x:Name="FilterLabel" Content="Filter by:" Height="30" Margin="10" FontSize="10"/>
                            <TextBox x:Name="FilterEntry" Height="20" Width="150" Margin="10,5" Background="White" FontSize="10"/>
                            <Button x:Name="FilterConfirmButton" Height="20" Width="20" Margin="10,5">
                                <Grid>
                                    <Image Source="/images/searchGraphic.png"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </Grid>
            <Popup x:Name="PresetPopoutContainer" PlacementTarget="{Binding ElementName=NewEmptyButton}" StaysOpen="False" Placement="Right">
                <StackPanel Orientation="Horizontal" Background="#FFF1623C">
                    <c:ImageButton x:Name="NewPinButton" Click="NewPinClicked" TagValue="single" ImageSource="/images/newPinGraphic.png"/>
                    <c:ImageButton x:Name="NewDefinitionButton" Click="NewPinClicked" TagValue="double" ImageSource="/images/newDefinitionGraphic.png"/>
                    <c:ImageButton x:Name="NewListButton" Click="NewPinClicked" TagValue="multi" ImageSource="/images/newListGraphic.png"/>
                </StackPanel>
            </Popup>
            <Popup x:Name="ComponentPopoutContainer" PlacementTarget="{Binding ElementName=NewContentButton}" StaysOpen="False" Placement="Right">
                <StackPanel Orientation="Horizontal" Background="#FFF1623C">
                    <c:ImageButton x:Name="NewTitleButton" Click="NewComponentClicked" TagValue="title" ImageSource="/images/newTitleGraphic.png"/>
                    <c:ImageButton x:Name="NewBulletButton" Click="NewComponentClicked" TagValue="list" ImageSource="/images/newBulletPointGraphic.png"/>
                </StackPanel>
            </Popup>
            <u:ColourPickerView
                x:Name="ColourPickerPopout"
                DataContext="{Binding ColourPicker}"
                Target ="{Binding ElementName=ColourPickButton}" />
            <Grid x:Name="ColourPickerContainer" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="170,30,0,0" Height="55" Width="200" Background="#FFEFEFEF">
                <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Width="55">
                    <Label Content="R:" HorizontalAlignment="Left"/>
                    <TextBox x:Name="RedAmtContainer" HorizontalAlignment="Right" Width="35"/>
                </Grid>
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" Width="55">
                    <Label Content="G:" HorizontalAlignment="Left"/>
                    <TextBox x:Name="GreenAmtContainer" HorizontalAlignment="Right" Width="35"/>
                </Grid>
                <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Width="55">
                    <Label Content="B:" HorizontalAlignment="Left"/>
                    <TextBox x:Name="BlueAmtContainer" HorizontalAlignment="Right" Width="35"/>
                </Grid>
                <Button x:Name="ColourSaveButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Height="18" Content="Save" Margin="2"/>
                <!--<Grid x:Name="HuePicker" Margin="5,5">
                    <Image x:Name="HueBackground" Margin="0,0" Height="16" VerticalAlignment="Top" Source="images/test_rainbow.png" Stretch="Fill"/>
                    <Button x:Name="HueSliderKnob" Height="18" Width="5" VerticalAlignment="Top" Margin="-1"/>
                </Grid>-->
                <!--<Grid x:Name="TonePicker" Margin="5,26">
                    <Border x:Name="ToneBackground" Height="16" VerticalAlignment="Top" >
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform Angle="270" CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Button x:Name="ToneSliderKnob" Height="18" Width="5" VerticalAlignment="Top" Margin="-1"/>
                </Grid>-->
            </Grid>
        </Grid>
    </DockPanel>
</Window>
