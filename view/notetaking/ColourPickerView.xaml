<UserControl x:Class="PinHoard.view.notetaking.ColourPickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinHoard.view.notetaking"
             mc:Ignorable="d">
    <Popup x:Name="ColourPickerPopout" PlacementTarget="{Binding Target, RelativeSource={RelativeSource AncestorType=UserControl}}" 
           IsOpen="{Binding ColourPickState, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
           Placement="Bottom" StaysOpen="True">
        <StackPanel Background="#FFEFEFEF">
            <Slider Value="{Binding R_Slider, Mode=TwoWay}"
                    Maximum="255" Width="120" Height="Auto" Margin="5,10"/>
            <Slider Value="{Binding G_Slider, Mode=TwoWay}" 
                    Maximum="255" Width="120" Height="Auto" Margin="5,10"/>
            <Slider Value="{Binding B_Slider, Mode=TwoWay}" 
                    Maximum="255" Width="120" Height="Auto" Margin="5,10"/>
        </StackPanel>
    </Popup>
</UserControl>
