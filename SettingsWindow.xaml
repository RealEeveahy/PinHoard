<Window x:Class="PinHoard.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinHoard"
        mc:Ignorable="d"
        Title="Board Settings" Height="200" Width="400">
    <Grid>
        <Label x:Name="TitleLabel" Content="Settings for board" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Foreground="#FF223E5B" FontSize="16"/>
        
        <Label x:Name="RenameLabel" Content="Board name:" Margin="20,-20,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF223E5B" FontSize="12"/>
        <TextBox x:Name="RenameBox" Margin="0,-20,20,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200"/>

        <Button x:Name="DeleteButton" Content="Delete board" Margin="0,40,20,0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" Foreground="#FF223E5B" Background="#FFF69176"  FontSize="12"/>

        <Button x:Name="CloseButton" Content="Close" Margin="20,0,0,20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" FontSize="12"/>
        <Button x:Name="SaveChangeButton" Content="Save Changes" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" FontSize="12"/>
    </Grid>
</Window>
